root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4


[*.css]
indent_size = 2
tab_width = 2

[*.feature]
indent_size = 2

[*.haml]
indent_size = 2

[*.sass]
indent_size = 2

[*.scss]
indent_size = 2

[*.styl]
indent_size = 2

[{*.ats,*.ts}]
indent_size = 2
tab_width = 2

[{*.cjs,*.js}]
indent_size = 2
tab_width = 2

[{*.yml,*.yaml}]
indent_size = 2

[{*.zsh,*.bash,*.sh}]
indent_size = 2
tab_width = 2

[{.babelrc,.prettierrc,.stylelintrc,.eslintrc,jest.config,bowerrc,*.jsb3,*.jsb2,*.graphqlconfig,*.json}]
indent_size = 2
