{
  "name": "typeScriptNodeEs6Postgress",
  "version": "1.0.0",
  "description": "Construção de uma api com Typescript para fins de estudo.",
  "main": "./dist/src/server.js",
  "author": "Márcio Heleno <marcio@marcioheleno.website> (http://marcioheleno.website/)",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rimraf dist && rimraf reports",
    "lint": "eslint ./src/**/*.ts ./test/**/*.spec.ts",
    "lint:fix": "eslint --fix ./src/**/*.ts ./test/**/*.spec.ts",
    "pretest": "cross-env NODE_ENV=test yarn build && yarn lint",
    "test": "cross-env NODE_ENV=test mocha",
    "test:mutation": "node_modules/.bin/stryker run",
    "stryker:init": "node_modules/.bin/stryker init",
    "dev": "cross-env PORT=3000 NODE_ENV=dev nodemon -x ts-node ./src/server.ts",
    "develop": "nodemon",
    "prod": "PORT=3000 yarn build && yarn start",
    "tsc": "tsc"
  },
  "engines": {
    "node": ">=12.13.0"
  },
  "keywords": [
    "api POC",
    "Estudo aplicado TypeScript 3",
    "TypeScript 3"
  ],
  "dependencies": {
    "body-parser": "^1.18.3",
    "chai-http": "^4.2.1",
    "express": "^4.17.1",
    "halson": "^3.0.0",
    "js2xmlparser": "^4.0.0",
    "lodash": "^4.17.19",
    "mongoose": "^5.8.9"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^2.5.0",
    "@stryker-mutator/html-reporter": "^2.5.0",
    "@stryker-mutator/mocha-framework": "^2.5.0",
    "@stryker-mutator/mocha-runner": "^2.5.0",
    "@stryker-mutator/typescript": "^2.5.0",
    "@types/chai": "^4.2.7",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.2",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^5.2.7",
    "@types/mongodb": "^3.3.14",
    "@types/mongoose": "^5.5.43",
    "@types/node": "^13.1.6",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "chai": "^4.2.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^7.0.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.4"
  }
}
